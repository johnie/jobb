/*------------------------------------*
   $MAIN
*------------------------------------*/
/**
 * Main styles
 * (Keeping it in one file due to the projects small size)
 */

if $global-border-box
  *, *:before, *:after
    vendor('box-sizing', border-box)

body
  font-family $base-font-family
  color $base-color
  padding 0
  margin 0

/**
 * Resets
 */
a
  text-decoration none
  color $link-color
  font-weight 400
  vendor('transition', color .2s)

  &:hover
    color $base-color

p
  font-size 1.25em
  line-height 1.68
  font-weight 300

ul
  font-size 1.1em
  line-height 1.5
  margin 0

h3
  font-weight 600
  font-size 1.4em
  margin 0
  padding 0
  margin-bottom .5em

/**
 * BASE
 */
.presentation
  margin 0
  position fixed
  top 0
  left 0
  width 33.333333%
  height 100%
  background $base-color url('images/johnie.png') top center no-repeat
  vendor('background-size', cover)

  &:before
    content ''
    display block
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background-color $base-color
    opacity .3

.night-mode__btn
  position absolute
  top 1.3em
  right 1.5em
  z-index 5
  cursor pointer

  input[type="checkbox"]
    z-index -1
    display none

  span
    display block
    width 2em
    height 2em
    background transparent url('images/moon.svg') center center no-repeat
    vendor('background-size', 100%)

    &.moon
      background-image url('images/sun.svg')

.main
  position relative
  width 66.666666%
  height 100%
  float right
  padding 1.5em 3.5em 3em
  clearfix()
  vendor('transition', all .2s ease)

  &.night-mode
    background-color $base-color
    color #fff

    a:hover
      color #fff

.container
  max-width 850px
  margin 0 auto

.header
  margin-bottom 2em

.site-name
  visuallyhidden()

.site-title
  font-size 2.2em
  font-weight 200
  margin-bottom 20px

.open-positions
  font-size 1em
  font-weight 600

.footer
  clearfix()

.disclaimer
  font-weight 600
  display block
  line-height 1
  margin 0
  padding 0
  padding-top 6px

.nordstrom
  width 98px
  height 35px
  -webkit-background-size 100%
  background-size 100%
  background transparent url('images/nordstrom.png') top left no-repeat
  display block
  text-indent -9999px
  float right

  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    background transparent url('images/nordstrom@2x.png') top left no-repeat
    -webkit-background-size 100%
    background-size 100%
